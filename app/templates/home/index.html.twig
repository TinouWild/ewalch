{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div id="header-navbar">
            <div class="profile">
                <img src="{{ asset('images/20230527_224322.jpg') }}" alt="picture_home"
                     class="img-fluid rounded-circle">
                <h1 class="text-light"><a href="{{ path('app_home_index') }}">Etienne Walch</a></h1>
                <div class="social-links mt-3 text-center">
                    <a href="https://www.instagram.com/etienne_walch/" target="_blank" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.linkedin.com/in/etienne-walch-07683216b/" target="_blank" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a href="#etienne" class="nav-link scrollto active"><i class="bi bi-house"></i> <span>Accueil</span></a></li>
                    <li><a href="#about" class="nav-link scrollto"><i class="bi bi-person"></i> <span>A propos</span></a></li>
                    <li><a href="#experiences" class="nav-link scrollto"><i class="bi bi-body-text"></i> <span>Expériences</span></a></li>
                    <li><a href="#portfolio" class="nav-link scrollto"><i class="bi bi-journal-album"></i> <span>Portfolio</span></a></li>
                    <li><a href="#contact" class="nav-link scrollto"><i class="bi bi-envelope"></i> <span>Contact</span></a></li>
                </ul>
            </nav>
        </div>

        <section id="etienne" class="d-flex flex-column justify-content-center align-items-center">
            <div class="etienne-container" data-aos="fade-in">
                <h1>Etienne Walch</h1>
                <span id="dev-typed"></span>
            </div>
        </section>

        <div id="header-navbar-mobile" class="social-links mt-3">
            <div class="d-flex justify-content-around">
                <a href="https://www.instagram.com/etienne_walch/" target="_blank" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="https://www.linkedin.com/in/etienne-walch-07683216b/" target="_blank" class="linkedin"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>

        <main id="main">
            {% include 'home/_apropos.html.twig' %}
            {% include 'home/_experiences.html.twig' %}
            {% include 'home/_portfolio.html.twig' %}
            {% include 'home/_contact.html.twig' %}
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var options = {
                strings: ["Développeur"],
                typeSpeed: 50,
                backSpeed: 25,
                backDelay: 1000,
                loop: true
            };

            var typed = new Typed("#dev-typed", options);
        });
    </script>
{% endblock %}